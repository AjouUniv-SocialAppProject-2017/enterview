<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop = "10dip"
    android:background="#FFFFFF"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "5dip">

        <TextView
            android:id="@+id/proud_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:text="제목"
            android:textSize="13dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/proud_name"
            android:textSize = "13dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text = "닉네임"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "5dip">

        <ImageView
            android:id="@+id/proud_imageL"
            android:layout_width="100dip"
            android:layout_height="100dip"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/ic_media_play" />

    </RelativeLayout>

    <TextView
        android:id="@+id/proud_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/proud_imageL"
        android:text="글의 내용입니다"
        android:textSize="13dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "5dip">
    <TextView
        android:id="@+id/proud_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dip"
        android:layout_alignParentRight="true"
        android:text="날짜"
        android:textSize="12dip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/cardview_light_background"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "5dip">

        <TextView
            android:id="@+id/proud_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:clickable="true"
            android:text="댓글 0개"
            android:textSize="12dip" />

    </RelativeLayout>

</LinearLayout>