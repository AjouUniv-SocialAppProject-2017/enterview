<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="5dip">

        <RelativeLayout
            android:id="@+id/part1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mypageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:padding="5dip"
                android:text="회원정보"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/personalId"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/update_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="19dp"
                android:layout_toEndOf="@+id/update_btn"
                android:layout_toRightOf="@+id/update_btn"
                android:text="이메일"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/personalIdContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/personalId"
                android:layout_alignBottom="@+id/personalId"
                android:layout_margin="10dip"
                android:layout_marginTop="20dip"
                android:layout_toRightOf="@+id/personalId"
                android:text=""
                android:textSize="18sp" />

            <TextView
                android:id="@+id/personalNickContents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/personalNick"
                android:layout_alignBottom="@+id/personalNick"
                android:layout_margin="10dip"
                android:layout_marginTop="20dip"
                android:layout_toRightOf="@+id/personalNick"
                android:text=""
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/update_btn"
                android:layout_width="84dp"
                android:layout_height="95dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/mypageTitle"
                android:layout_margin="25dp"
                android:text="수정"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/personalNick"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/personalId"
                android:layout_alignStart="@+id/personalId"
                android:layout_below="@+id/personalIdContents"
                android:text="닉네임"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/part1"
            android:id="@+id/part3"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/myText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimary"
                android:padding="5dip"
                android:text="내가 쓴 글"
                android:textColor="@color/colorAccent"
                android:textAlignment="center"
                android:textSize="24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/part3"
            android:id="@+id/part4"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

        <Button
            android:id="@+id/myComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimary"
            android:padding="5dip"
            android:text="내가 쓴 댓글"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="24sp" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>